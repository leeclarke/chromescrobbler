{
	"name": "Chrome Scrobbler",
	"version": "0.2",  
	"description": "A last.fm scrobbler for popular websites, such as YouTube, Pandora, and Amazon Cloud Player",
	"icons": { "128": "lf-icon.png" },
	"background_page": "background.html",
	"options_page": "options.html",
	"permissions": [
		"tabs",
		"http://ws.audioscrobbler.com/",
		"http://post.audioscrobbler.com/",
		"http://post2.audioscrobbler.com/",
		"http://gdata.youtube.com/feeds/api/videos/"
	],
	"content_scripts": [
		{
			"matches": ["http://www.youtube.com/watch?v=*"],
			"js": ["youtube.js"],
			"css": ["youtube.css"]
		},
		{
			"matches": ["http://www.pandora.com/*"],
			"js": ["pandora.js"],
			"run_at": "document_end"
		},
		{
			"matches": ["https:www.amazon.com/gp/dmusic/mp3/player*"],
			"js": ["azcloud.js"],
			"run_at": "document_end"
		}
		
  ]
}
